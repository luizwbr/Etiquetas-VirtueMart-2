    </description>
	<files>
        <filename plugin="vmetiquetas">vmetiquetas.php</filename>
        <folder>admin</folder>        
        <filename>licenca-gplv3.txt</filename>
        <filename>gplv3-license.txt</filename>                
	</files>
    <languages folder="language">
    </languages>
    <config>
         <fields name="params" addfieldpath="plugins/system/vmetiquetas/admin/elements/">
            <fieldset name='basic'>
                <field type="asset" path="plugins/system/vmetiquetas/admin/"/>                                

                <field name="campo_numero" type="text" label="Campo Número"
                        description="Nome do campo do comprador para o número do endereço"
						default="numero" />
				<field name="campo_complemento" type="text" label="Campo Complemento"
                        description="Nome do campo do comprador para o complemento do endereço"
						default="complemento" />
				<field name="campo_bairro" type="text" label="Campo Bairro"
                        description="Nome do campo do comprador para o bairro do endereço"
						default="address_2" />
						
                <field type="spacer"/>
                <field type="about" path="plugins/system/vmetiquetas/admin/" />
            </fieldset>         
        </fields>
    </config>
    <install>
    </install>
</extension>